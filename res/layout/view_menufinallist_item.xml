<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp" >
    
    <ImageView
        android:id="@+id/menushowlist_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/layoutborderbackground"
        android:contentDescription="@string/string_simba_logo"
        android:src="@drawable/app_logo" />

    <TextView
        android:id="@+id/menushowlist_title"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text=""
        android:layout_marginLeft="5dp"
        android:textSize="16sp"
        android:layout_toRightOf="@id/menushowlist_img"
        android:textColor="#000000" />
    <TextView
        android:id="@+id/menushowlist_desc"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text=""
        android:layout_marginLeft="5dp"
        android:textColor="#999999"
        android:textSize="14sp"
        android:layout_below="@id/menushowlist_title"
        android:layout_toRightOf="@id/menushowlist_img" />
    <TextView
        android:id="@+id/menushowlist_tips"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text=""
        android:layout_marginLeft="5dp"
        android:textColor="#999999"
        android:textSize="14sp"
        android:layout_below="@id/menushowlist_desc"
        android:layout_toRightOf="@id/menushowlist_img" />
    	
</RelativeLayout>